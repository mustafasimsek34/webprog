@model IEnumerable<FitnessCenterManagement.Models.Gym>

@{
    ViewData["Title"] = "Spor Salonu Yönetimi";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-building"></i> Spor Salonu Detay Yönetimi</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Spor Salonu Ekle
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var gym in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">@gym.Name</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Konum:</dt>
                                <dd class="col-sm-8">@gym.Location</dd>
                                
                                <dt class="col-sm-4">Çalışma Saatleri:</dt>
                                <dd class="col-sm-8">@gym.WorkingHoursStart - @gym.WorkingHoursEnd</dd>
                                
                                <dt class="col-sm-4">İletişim:</dt>
                                <dd class="col-sm-8">@gym.ContactPhone</dd>
                                
                                <dt class="col-sm-4">Açıklama:</dt>
                                <dd class="col-sm-8">@gym.Description</dd>
                            </dl>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Edit" asp-route-id="@gym.Id" class="btn btn-sm btn-primary">
                                <i class="bi bi-pencil"></i> Düzenle
                            </a>
                            <a asp-action="Details" asp-route-id="@gym.Id" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i> Detay
                            </a>
                            <a asp-action="Delete" asp-route-id="@gym.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Spor salonu bulunamadı. Bir tane oluşturmak için "Spor Salonu Ekle" butonuna tıklayın.
                </div>
            </div>
        }
    </div>
</div>
