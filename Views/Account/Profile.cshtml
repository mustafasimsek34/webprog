@{
    ViewData["Title"] = "Profilim";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body p-4">
                <h2 class="mb-4">Profil Bilgilerim</h2>

                <dl class="row">
                    <dt class="col-sm-3">İsim</dt>
                    <dd class="col-sm-9">@ViewData["FullName"]</dd>

                    <dt class="col-sm-3">E-posta</dt>
                    <dd class="col-sm-9">@ViewData["Email"]</dd>

                    <dt class="col-sm-3">Telefon</dt>
                    <dd class="col-sm-9">@ViewData["PhoneNumber"]</dd>

                    <dt class="col-sm-3">Kayıt Tarihi</dt>
                    <dd class="col-sm-9">@ViewData["RegistrationDate"]</dd>
                </dl>

                <div class="mt-3">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Geri</a>
                </div>
            </div>
        </div>
    </div>
</div>
