@model IEnumerable<FitnessCenterManagement.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmenler";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-person-badge"></i> Eğitmen Yönetimi</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Yeni Eğitmen Ekle
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>İsim</th>
                                <th>E-posta</th>
                                <th>Telefon</th>
                                <th>Uzmanlıklar</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.Name</strong></td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>
                                        @if (item.TrainerServices.Any())
                                        {
                                            <span>@string.Join(", ", item.TrainerServices.Select(ts => ts.Service.Name))</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Hizmet atanmamış</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsAvailable)
                                        {
                                            <span class="badge bg-success">Müsait</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Müsait Değil</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil"></i> Düzenle
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i> Detay
                                        </a>
                                        <a asp-action="ManageAvailability" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                            <i class="bi bi-calendar3"></i> Program
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Sil
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Eğitmen bulunamadı. Yeni eğitmen eklemek için "Yeni Eğitmen Ekle" butonuna tıklayın.
                </div>
            }
        </div>
    </div>
</div>
