@model IEnumerable<FitnessCenterManagement.Models.Appointment>

@{
    ViewData["Title"] = "Tüm Randevular";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-calendar-check"></i> Tüm Randevular</h2>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Üye</th>
                                <th>Eğitmen</th>
                                <th>Hizmet</th>
                                <th>Tarih & Saat</th>
                                <th>Durum</th>
                                <th>Kayıt Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model)
                            {
                                <tr>
                                    <td>@appointment.Member.FullName</td>
                                    <td>@appointment.Trainer.Name</td>
                                    <td>@appointment.Service.Name</td>
                                    <td>@appointment.AppointmentDate.ToShortDateString() @appointment.AppointmentTime</td>
                                    <td>
                                        @if (appointment.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">Beklemede</span>
                                        }
                                        else if (appointment.Status == "Confirmed")
                                        {
                                            <span class="badge bg-success">Onaylandı</span>
                                        }
                                        else if (appointment.Status == "Cancelled")
                                        {
                                            <span class="badge bg-danger">İptal Edildi</span>
                                        }
                                        else if (appointment.Status == "Completed")
                                        {
                                            <span class="badge bg-info">Tamamlandı</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@appointment.Status</span>
                                        }
                                    </td>
                                    <td>@appointment.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        @if (appointment.Status == "Pending")
                                        {
                                            <form asp-action="UpdateStatus" method="post" style="display:inline;">
                                                <input type="hidden" name="id" value="@appointment.Id" />
                                                <input type="hidden" name="status" value="Confirmed" />
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="bi bi-check-circle"></i> Onayla
                                                </button>
                                            </form>
                                            <form asp-action="UpdateStatus" method="post" style="display:inline;">
                                                <input type="hidden" name="id" value="@appointment.Id" />
                                                <input type="hidden" name="status" value="Cancelled" />
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-x-circle"></i> İptal Et
                                                </button>
                                            </form>
                                        }
                                        else if (appointment.Status == "Confirmed")
                                        {
                                            <form asp-action="UpdateStatus" method="post" style="display:inline;">
                                                <input type="hidden" name="id" value="@appointment.Id" />
                                                <input type="hidden" name="status" value="Completed" />
                                                <button type="submit" class="btn btn-sm btn-info">
                                                    <i class="bi bi-check2-square"></i> Tamamlandı Olarak İşaretle
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Randevu bulunamadı.
                </div>
            }
        </div>
    </div>
</div>
