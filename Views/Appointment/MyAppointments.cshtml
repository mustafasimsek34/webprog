@model IEnumerable<FitnessCenterManagement.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-calendar-check"></i> Randevularım</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Book" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Yeni Randevu Al
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Hizmet</th>
                                <th>Eğitmen</th>
                                <th>Tarih</th>
                                <th>Saat</th>
                                <th>Durum</th>
                                <th>Notlar</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model)
                            {
                                <tr>
                                    <td><strong>@appointment.Service.Name</strong></td>
                                    <td>@appointment.Trainer.Name</td>
                                    <td>@appointment.AppointmentDate.ToString("dd MMM yyyy")</td>
                                    <td>@appointment.AppointmentTime</td>
                                    <td>
                                        @if (appointment.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">Beklemede</span>
                                        }
                                        else if (appointment.Status == "Confirmed")
                                        {
                                            <span class="badge bg-success">Onaylandı</span>
                                        }
                                        else if (appointment.Status == "Cancelled")
                                        {
                                            <span class="badge bg-danger">İptal Edildi</span>
                                        }
                                        else if (appointment.Status == "Completed")
                                        {
                                            <span class="badge bg-info">Tamamlandı</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@appointment.Status</span>
                                        }
                                    </td>
                                    <td>@(appointment.Notes ?? "-")</td>
                                    <td>
                                        @if (appointment.Status != "Cancelled" && appointment.Status != "Completed")
                                        {
                                            <form asp-action="Cancel" method="post" style="display:inline;">
                                                <input type="hidden" name="id" value="@appointment.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bu randevuyu iptal etmek istediğinizden emin misiniz?')">
                                                    <i class="bi bi-x-circle"></i> İptal Et
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> Henüz hiç randevunuz bulunmamaktadır.
                    <br>
                    <a asp-action="Book" class="btn btn-primary mt-3">
                        <i class="bi bi-calendar-plus"></i> İlk Randevunuzu Alın
                    </a>
                </div>
            }
        </div>
    </div>
</div>
